<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
   >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="android"
        android:textSize="25dp"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/androidImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/buttonAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fcbsu"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="android"
        app:layout_constraintTop_toBottomOf="@+id/androidImage"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/buttonIos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fcbsu"
        android:text="ios"
        app:layout_constraintTop_toBottomOf="@+id/androidImage"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/miuiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fcbsu"
        android:text="miui"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/androidImage"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="but_Andr"
        app:layout_constraintTop_toBottomOf="@+id/buttonAndroid"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="but_ios"
        app:layout_constraintTop_toBottomOf="@+id/buttonIos"
        app:layout_constraintStart_toEndOf="@id/button1"
        android:layout_marginStart="40dp"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="but_miui"
        app:layout_constraintTop_toBottomOf="@+id/miuiButton"
        app:layout_constraintStart_toEndOf="@id/button2"
        android:layout_marginStart="60dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>